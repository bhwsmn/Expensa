@page "{id:guid}"
@model WebApp.Pages.Accounts.Edit

@{
    ViewData["Title"] = "Edit Account";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>
</div>

<form method="POST">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Account (@RouteData.Values["id"])</h4>
                </div>
                <div class="card-body">

                    <div class="form-group row mb-4">
                        <label asp-for="InputDto.Name" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                        <div class="col-sm-12 col-md-7">
                            <input asp-for="InputDto.Name" class="form-control">
                            <span asp-validation-for="InputDto.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-4">
                        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                        <div class="col-sm-12 col-md-7">
                            <button class="btn btn-primary">Update</button>
                            <button asp-page-handler="Delete" class="btn btn-danger ml-4">Delete</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}